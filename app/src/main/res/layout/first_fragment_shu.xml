<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/stu1"
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100sp">
        <ImageView
            android:id="@+id/img1"
            android:src="@drawable/yw"
            android:layout_width="90sp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="3sp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp" >
                <TextView
                    android:layout_marginTop="20sp"
                    android:text="科目："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stuname1"
                    android:layout_marginTop="20sp"
                    android:text="语文"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp" >
                <TextView
                    android:layout_marginTop="10sp"
                    android:text="专业："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stuzhuanye1"
                    android:layout_marginTop="10sp"
                    android:text="护理"
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:text="年级："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stunianji1"
                    android:layout_marginTop="10sp"
                    android:text="大二"
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stu2"
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100sp">
        <ImageView
            android:id="@+id/img2"
            android:src="@drawable/sx"
            android:layout_width="90sp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="3sp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp" >
                <TextView
                    android:layout_marginTop="20sp"
                    android:text="科目："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stuname2"
                    android:layout_marginTop="20sp"
                    android:text="数学"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp" >
                <TextView
                    android:layout_marginTop="10sp"
                    android:text="专业："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stuzhuanye2"
                    android:layout_marginTop="10sp"
                    android:text="计算机"
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:text="年级："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stunianji2"
                    android:layout_marginTop="10sp"
                    android:text="大三"
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stu3"
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100sp">
        <ImageView
            android:id="@+id/img3"
            android:src="@drawable/yy"
            android:layout_width="90sp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="3sp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp" >
                <TextView
                    android:layout_marginTop="20sp"
                    android:text="科目："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stuname3"
                    android:layout_marginTop="20sp"
                    android:text="英语"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp" >
                <TextView
                    android:layout_marginTop="10sp"
                    android:text="专业："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stuzhuanye3"
                    android:layout_marginTop="10sp"
                    android:text="艺术"
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:text="年级："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stunianji3"
                    android:layout_marginTop="10sp"
                    android:text="大四"
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
