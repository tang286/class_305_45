<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="5dp"
        android:text="订购的书籍:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/stu1"
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/img1"
            android:src="@drawable/yw"
            android:layout_width="90sp"
            android:layout_height="60dp" />
        <LinearLayout
            android:layout_marginLeft="3sp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp" >
                <TextView
                    android:layout_marginTop="20sp"
                    android:text="科目："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stuname1"
                    android:layout_marginTop="20sp"
                    android:text="语文"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp" >
                <TextView
                    android:layout_marginTop="10sp"
                    android:text="专业："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stuzhuanye1"
                    android:layout_marginTop="10sp"
                    android:text="护理"
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:text="年级："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stunianji1"
                    android:layout_marginTop="10sp"
                    android:text="大二"
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginTop="3dp"-->
        <!--android:layout_marginBottom="3dp"-->
        <!--android:background="#1B191A" />-->
    <TextView
        android:layout_marginTop="10dp"
        android:text="聘请的家教："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/stu5"
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/img5"
            android:src="@drawable/g"
            android:layout_width="90sp"
            android:layout_height="60dp" />
        <LinearLayout
            android:layout_marginLeft="3sp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp" >
                <TextView
                    android:layout_marginTop="20sp"
                    android:text="姓名："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stuname5"
                    android:layout_marginTop="20sp"
                    android:text="慕容倾城"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp" >
                <TextView
                    android:layout_marginTop="10sp"
                    android:text="专业："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stuzhuanye5"
                    android:layout_marginTop="10sp"
                    android:text="舞蹈"
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:text="年级："
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/stunianji5"
                    android:layout_marginTop="10sp"
                    android:text="大四"
                    android:layout_width="50sp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:text="基本信息："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:text="姓名："
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/name"
            android:textSize="25dp"
            android:text="赵芙清"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:text="年龄："
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/age"
            android:textSize="25dp"
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:text="专业："
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/zhuanye"
            android:textSize="25dp"
            android:text="计算机"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:text="性别："
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/sex"
            android:textSize="25dp"
            android:text="男"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:text="学历："
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/xueli"
            android:textSize="25dp"
            android:text="本科"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:text="党籍："
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/dangji"
            android:textSize="25dp"
            android:text="入党"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <Button
            android:id="@+id/xiugai1"
            android:layout_width="428dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorControlHighlight"
            android:onClick="btn_login_click"
            android:text="修改基本信息"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
